@model PrVeterinaria.Models.Mascota

@{
    ViewBag.Title = "Mascota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="widget-grid" class="">
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget" id="wid-id-0">
                <header>
                    <div class="jarviswidget-ctrls" role="menu">
                        <a href="@Url.Action("IndexMascota","Clientes")" class="button-icon jarviswidget-edit-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Nuevo">
                            <div class="btn">
                                <i class="fa fa-reply"></i> Volver
                            </div>
                        </a>
                    </div>
                    <h2>Registrar una Mascota</h2>
                </header>
                <div>
                    <div class="jarviswidget-editbox">

                        <input class="form-control" type="text">
                    </div>
                    <div class="widget-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.nombreMascota, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.nombreMascota, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
                                    @Html.ValidationMessageFor(model => model.nombreMascota, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.id_tipoMascota, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.id_tipoMascota, (IEnumerable<SelectListItem>)ViewBag.especie, "-- Seleccione --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.id_tipoMascota, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(model => model.raza, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.raza, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.raza, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.fecha_nacimiento_mascota, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.fecha_nacimiento_mascota, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
                                    @Html.ValidationMessageFor(model => model.fecha_nacimiento_mascota, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(model => model.edad, null, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.edad, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
                                    @Html.ValidationMessageFor(model => model.edad, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.id_Cliente, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.id_Cliente, (IEnumerable<SelectListItem>)ViewBag.cliente, "-- Seleccione --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.id_Cliente, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-offset-5 form-group col-md-2">
                                <input type="submit" id="btnGuardarItem" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                         }
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>