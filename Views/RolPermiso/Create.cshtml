@model  PrVeterinaria.Models.Rol
@{
    ViewBag.Title = "Rol";
}
@section Styles {
    @Styles.Render("~/Content/DataTables/dataTables.bootstrap.min.css")

}

<section id="widget-grid" class="">
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget" id="wid-id-0">
                <header>
                    <h2> Roles</h2>
                </header>
                <div class="widget-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div class="form-group text-align-left" aling="left">
                                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-md-4">
                                    @Html.EditorFor(Model => Model.nombreRol, new { htmlAttributes = new { @class = "form-control text-uppercase", id = "nombre" } })
                                    @Html.ValidationMessageFor(model => model.nombreRol, "", new { @class = "text-danger" })
                                </div>                            
                            </div>
                        </div>
                        <div class="col-md-offset-5 form-group col-md-2">
                            <input type="submit" id="btnGuardar" value="Guardar" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </article>
    </div>
</section>

<section>
    <div id="content">
        <div class="jarviswidget jarviswidget-color-white jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" role="widget" style="position: relative; opacity: 1; left: 0px; top: 0px;">

            <header role="heading" class="ui-sortable-handle">
                <h2>Lista de Roles</h2>
                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
            </header>
            <div class="widget-body">
                <div class="row galeria">
                    <div class="col-md-12">
                        <table class="table table-bordered table-striped" id="tlbItem">
                            <thead>
                                <tr>
                                    <th> <p style="text-align:center;font-family:Arial;font-size:90%"> ID                        </th>
                                    <th> <p style="text-align:center;font-family:Arial;font-size:90%"> Nombre                    </th>
                                    <th> </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.rol != null)

                                {
                                    foreach (var item in (List<PrVeterinaria.Models.ViewModel.Rolconsulta>)ViewBag.rol)
                                    {
                                        <tr>
                                            <td align="center">@item.id_rol                    </td>
                                            <td align="center">@item.nombreRol               </td>
                                            <td>
                                                @Html.ActionLink("Detalle", "Rolespermiso", new { id = item.id_rol })
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    @Scripts.Render("~/Scripts/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.js")
    @Scripts.Render("~/Scripts/i18n/jquery.dataTables.es.js")


    <script>

         $("#btnGuardarKit").prop('disabled', true)

        $("#nombre").change(function ()
        {
            if ($("#nombre").val().length > 0)
            {
                $("#btnGuardar").prop('disabled', false)
            }
            else
            {
                $("#btnGuardar").prop('disabled', true)
            }

        })
     
        $(document).ready(function () {
            $('#tlbItem').DataTable({

                "oLanguage": {
                    "oPaginate": {
                        "sFirst": sFirst,
                        "sLast": sLast,
                        "sNext": sNext,
                        "sPrevious": sPrevious,
                    },

                    "sEmptyTable": sEmptyTable,
                    "sInfo": sInfo,
                    "sInfoEmpty": sInfoEmpty,
                    "sInfoFiltered": sInfoFiltered,
                    "sZeroRecords": sZeroRecords,
                    "sLengthMenu": sLengthMenu
                },
                "order": [0, "desc"],
            });
        });
    </script>
}